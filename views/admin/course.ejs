<!-- include header -->
<%- include('partials/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="text-center"><h1>Course Page</h1></div>
    <div class="box-nav d-flex justify-between btn-border">
      <a href="/admin/courses/add-course" class="border-shadow asd">
        <span class="text-gradient">New Course</span>
      </a>
    </div>

    <!-- form handling -->
    <form action="/" method="POST">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr class="text-center">
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <%- include('partials/_showCourse') %>
        </tbody>
      </table>
    </form>

  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('partials/_footer') %>
<!-- /include footer -->
